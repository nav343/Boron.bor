{
  "name": "boron",
  "version": "1.0.0",
  "description": "A multi-purpose programming language written in Typescript",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "pkg ."
  },
  "author": "nav343",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^18.11.18",
    "@types/prompt-sync": "^4.2.0",
    "prompt-sync": "^4.2.0"
  },
  "bin": {
    "boronc": "./dist/index.js"
  },
  "pkg": {
    "scripts": "./dist/**/*.js",
    "targets": [
      "latest-linux-x64",
      "latest-macos-x64",
      "latest-win-x64"
    ],
    "outputPath": "./dist/build",
    "compress": "GZip"
  }
}
